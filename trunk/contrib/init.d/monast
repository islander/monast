#!/bin/bash
#
# chkconfig: - 91 60
# description: Monast Asterisk Monitor
#
# processname: monast
# config: /etc/monast.conf

# source function library
. /etc/rc.d/init.d/functions

RETVAL=0

prog="monast"

if [ -f /usr/bin/monast ]; then
	MONAST=/usr/bin/monast
elif [ -f /opt/monast/pymon/monast.py ]; then
	MONAST=/opt/monast/pymon/monast.py
fi

case "$1" in
	start)
		# The process must be configured first.
		[ -f /etc/monast.conf ] || exit 6

		echo -n $"Starting $prog: "

		daemon $MONAST --daemon > /dev/null
		RETVAL=$?
		[ $RETVAL -eq 0 ] && touch /var/lock/subsys/monast
		echo
		;;
	stop)
		echo -n $"Shutting down $prog: "
		kill -TERM $(cat /var/run/monast.pid)
		RETVAL=$?
		[ $RETVAL -eq 0 ] && rm -f /var/lock/subsys/monast
		echo
		;;
	restart)
		$0 stop
		$0 start
		RETVAL=$?
		;;
	reload)
		echo -n $"Reloading $prog config: "
		kill -HUP $(cat /var/run/monast.pid)
		RETVAL=$?
		;;
	status)
		status monast
		RETVAL=$?
		;;
	*)
		echo $"Usage: $0 {start|stop|restart|reload|status}"
		exit 2
esac

exit $RETVAL

